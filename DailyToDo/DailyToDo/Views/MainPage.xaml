<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
   x:Class="DailyToDo.MainPage"
   xmlns="http://xamarin.com/schemas/2014/forms"
   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   xmlns:controls="clr-namespace:DailyToDo.Views.Controls"
   xmlns:markup="clr-namespace:DailyToDo.Views.MarkupExtensions"
   xmlns:values="clr-namespace:DailyToDo.Assets.Texts"
   xmlns:viewModels="clr-namespace:DailyToDo"
   xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
   BackgroundColor="{StaticResource BackgroundColor}">
    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackLayout
           Grid.Row="0"
           BackgroundColor="{StaticResource BlackColor}"
           HorizontalOptions="FillAndExpand"
           Orientation="Horizontal"
           Spacing="0"
           VerticalOptions="FillAndExpand">
            <controls:SvgImage
               Margin="10,0,0,0"
               BackgroundColor="Transparent"
               HeightRequest="30"
               HorizontalOptions="Start"
               Source="{markup:Icon header}"
               VerticalOptions="CenterAndExpand"
               WidthRequest="30" />

            <Label
               Margin="10,0,0,0"
               FontSize="16"
               HorizontalOptions="StartAndExpand"
               Text="{x:Static values:Texts.AppTitle}"
               TextColor="{StaticResource WhiteColor}"
               VerticalOptions="Center" />

            <controls:SvgImage
               Margin="0,0,10,0"
               xct:TouchEffect.Command="{Binding EditCommand}"
               xct:TouchEffect.NormalScale="1.0"
               xct:TouchEffect.PressedScale="0.9"
               BackgroundColor="Transparent"
               HeightRequest="30"
               HorizontalOptions="EndAndExpand"
               IsVisible="{Binding IsEditMode}"
               Source="{markup:Icon done}"
               VerticalOptions="CenterAndExpand"
               WidthRequest="30" />

            <controls:SvgImage
               Margin="0,0,10,0"
               xct:TouchEffect.Command="{Binding EditCommand}"
               xct:TouchEffect.NormalScale="1.0"
               xct:TouchEffect.PressedScale="0.9"
               BackgroundColor="Transparent"
               HeightRequest="30"
               HorizontalOptions="EndAndExpand"
               IsVisible="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"
               Source="{markup:Icon edit}"
               VerticalOptions="CenterAndExpand"
               WidthRequest="30" />
        </StackLayout>

        <CollectionView
           Grid.Row="1"
           BackgroundColor="{StaticResource BackgroundColor}"
           ItemSizingStrategy="MeasureFirstItem"
           ItemsSource="{Binding Items}">
            <CollectionView.Header>
                <ContentView HeightRequest="10" />
            </CollectionView.Header>
            <CollectionView.EmptyView>
                <Label
                   HorizontalOptions="CenterAndExpand"
                   HorizontalTextAlignment="Center"
                   Text="{x:Static values:Texts.NoItems}"
                   VerticalOptions="CenterAndExpand" />
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <ContentView Padding="10,0,10,10">
                        <Frame HeightRequest="40">
                            <StackLayout
                               HorizontalOptions="StartAndExpand"
                               Orientation="Horizontal"
                               VerticalOptions="CenterAndExpand">
                                <controls:SvgImage
                                   Margin="0"
                                   xct:TouchEffect.Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MainPageViewModel}}, Path=CheckCommand}"
                                   xct:TouchEffect.CommandParameter="{Binding}"
                                   xct:TouchEffect.NormalScale="1.0"
                                   xct:TouchEffect.PressedScale="0.9"
                                   BackgroundColor="Transparent"
                                   HeightRequest="25"
                                   HorizontalOptions="Start"
                                   IsVisible="{Binding IsChecked}"
                                   Source="{markup:Icon checked}"
                                   VerticalOptions="Center"
                                   WidthRequest="25" />

                                <controls:SvgImage
                                   Margin="0"
                                   xct:TouchEffect.Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MainPageViewModel}}, Path=CheckCommand}"
                                   xct:TouchEffect.CommandParameter="{Binding}"
                                   xct:TouchEffect.NormalScale="1.0"
                                   xct:TouchEffect.PressedScale="0.9"
                                   BackgroundColor="Transparent"
                                   HeightRequest="25"
                                   HorizontalOptions="Start"
                                   IsVisible="{Binding IsChecked, Converter={StaticResource InverseBoolConverter}}"
                                   Source="{markup:Icon check}"
                                   VerticalOptions="Center"
                                   WidthRequest="25" />

                                <Label
                                   HorizontalOptions="StartAndExpand"
                                   IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MainPageViewModel}}, Path=IsEditMode, Converter={StaticResource InverseBoolConverter}}"
                                   Text="{Binding Title}"
                                   VerticalOptions="CenterAndExpand" />

                                <Frame
                                   Padding="5,0,0,0"
                                   BackgroundColor="{StaticResource BackgroundColor}"
                                   CornerRadius="4"
                                   HasShadow="False"
                                   IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MainPageViewModel}}, Path=IsEditMode}">
                                    <Entry
                                       HorizontalOptions="StartAndExpand"
                                       Text="{Binding Title, Mode=TwoWay}"
                                       WidthRequest="280" />
                                </Frame>

                                <controls:SvgImage
                                   Margin="10,0,10,0"
                                   xct:TouchEffect.Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MainPageViewModel}}, Path=DeleteItemCommand}"
                                   xct:TouchEffect.CommandParameter="{Binding}"
                                   xct:TouchEffect.NormalScale="1.0"
                                   xct:TouchEffect.PressedScale="0.9"
                                   BackgroundColor="Transparent"
                                   HeightRequest="25"
                                   HorizontalOptions="End"
                                   IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MainPageViewModel}}, Path=IsEditMode}"
                                   Source="{markup:Icon delete}"
                                   VerticalOptions="CenterAndExpand"
                                   WidthRequest="25" />
                            </StackLayout>
                        </Frame>
                    </ContentView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <controls:SvgImage
           Grid.Row="1"
           Margin="0,0,10,10"
           xct:TouchEffect.Command="{Binding ShowItemCreatorCommand}"
           xct:TouchEffect.NormalScale="1.0"
           xct:TouchEffect.PressedScale="0.9"
           BackgroundColor="Transparent"
           HeightRequest="60"
           HorizontalOptions="End"
           Source="{markup:Icon add}"
           VerticalOptions="End"
           WidthRequest="60" />

        <viewModels:AddNewItemView
           Grid.Row="0"
           Grid.RowSpan="2"
           IsVisible="{Binding AddNewItemIsVisible}" />

    </Grid>
</ContentPage>
